<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.movies.any? %>
      <h3>Movies (<%= @user.movies.count %>)</h3>
      <ul class="movies">
        <%= render @movies %>
      </ul>
    <% end %>
  </div>
</div>